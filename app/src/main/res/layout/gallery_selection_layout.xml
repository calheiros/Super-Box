<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    android:id="@+id/gallery_selection_parentLayout"
	android:orientation="vertical">

	<android.support.design.widget.AppBarLayout
		android:id="@+id/tabanim_appbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

		<include
			layout="@layout/toolbar"/>

	</android.support.design.widget.AppBarLayout>

	<android.support.v7.widget.RecyclerView
        android:clipToPadding="false"
		android:id="@+id/my_recycler_view"
		android:scrollbars="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:padding="1dp"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:background="?colorBackgroundDark"
		android:gravity="center_vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical"
            android:id="@+id/importView"
            android:gravity="center"
            android:padding="5dp">

            <ImageView
                android:tint="?commonColor"
                android:layout_height="28dp"
                android:layout_width="28dp"
                android:id="@+id/importImageView"
                android:src="@drawable/ic_import"/>
            
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Import"
                android:id="@+id/options_album_selectTextView"
                android:maxLines="1"
                android:textColor="?commonColor"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical"
            android:id="@+id/selectView"
            android:gravity="center"
            android:padding="5dp">

            <ImageView
                android:tint="?commonColor"
                android:layout_height="28dp"
                android:layout_width="28dp"
                android:id="@+id/selectImageView"
                android:src="@drawable/ic_select_all"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Select all"
                android:id="@+id/options_selectTextView"
                android:maxLines="1"
                android:textColor="?commonColor"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:textSize="12sp"/>
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>

