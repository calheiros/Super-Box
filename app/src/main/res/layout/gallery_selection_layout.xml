<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    android:id="@+id/gallery_selection_parentLayout"
	android:orientation="vertical">

	<android.support.design.widget.AppBarLayout
		android:id="@+id/tabanim_appbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

		<include
			layout="@layout/toolbar"/>

	</android.support.design.widget.AppBarLayout>

	<android.support.v7.widget.RecyclerView
        android:clipToPadding="false"
		android:id="@+id/my_recycler_view"
		android:scrollbars="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:padding="1dp"/>

	<LinearLayout
		android:layout_height="45dp"
		android:layout_width="match_parent"
		android:background="?colorBackgroundDark"
		android:gravity="center_vertical">

			<ImageView
                android:background="?attr/selectableItemBackground"
                android:tint="?commonColor"
				android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="6dp"
                android:id="@+id/gallery_selection_lock_view"
				android:layout_width="wrap_content"
                android:layout_weight="1.0"
				android:src="@drawable/ic_add_lock"/>

			<ImageView
                android:background="?attr/selectableItemBackground"
                android:tint="?commonColor"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:padding="6dp"
				android:id="@+id/ic_seletctAll"
				android:src="@drawable/ic_select_all"/>

	</LinearLayout>

</LinearLayout>

