<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="horizontal"
	android:id="@+id/dialog_buttons_layout"
	android:layout_marginTop="16dp"
	android:visibility="gone"
	android:paddingEnd="13dp"
	android:paddingStart="13dp"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="end|center_vertical">

	<Button
		android:padding="10dp"
		style="?android:attr/buttonBarButtonStyle"
        android:background="@drawable/bg_dialog_negative"
        android:visibility="gone"
		android:layout_width="wrap_content"
        android:layout_height="40dp"
		android:text="@android:string/cancel"
		app:autoSizeTextType="uniform"
		app:autoSizeMaxTextSize="15sp"
		app:autoSizeMinTextSize="13sp"
        android:minWidth="65dp"
        android:includeFontPadding="false"
        android:gravity="center"
        android:textColor="@color/white"
		android:id="@+id/dialogNegativeButton"
		android:layout_marginEnd="8dp"/>

	<Button
		android:padding="10dp"
		android:textColor="@android:color/white"
        android:visibility="gone"
		android:background="@drawable/bg_dialog_positive"
		android:layout_width="wrap_content"
        android:layout_height="40dp"
		app:autoSizeTextType="uniform"
		app:autoSizeMaxTextSize="15sp"
		app:autoSizeMinTextSize="13sp"
		android:text="@android:string/ok"
        android:minWidth="65dp"
        android:includeFontPadding="false"
        android:gravity="center"
		android:id="@+id/dialogPositiveButton"
		style="?android:attr/buttonBarButtonStyle" />

</LinearLayout>

