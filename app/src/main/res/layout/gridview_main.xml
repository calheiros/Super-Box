<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:id="@+id/main_linear_layout"
	android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/tabanim_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <include
            layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_below="@+id/tabanim_appbar"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="match_parent">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:id="@+id/view_album_empty_view"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="35dp"
                android:text="@string/ascii_dead_face"
                android:textSize="40dp"
                android:textColor="@color/item_normalDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:text="@string/vazio"
                android:textColor="@color/item_normalDark"
                android:id="@+id/emptyTextView"
                android:layout_marginTop="14dp"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp"/>

    </RelativeLayout>

    <LinearLayout
        android:background="#FF0E0E0F"
        android:id="@+id/lock_layout"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageView
            android:tint="@color/item_normal"
            android:layout_weight="1.0"
            android:id="@+id/unlockView"
            android:background="?attr/selectableItemBackground"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:padding="6dp"
            android:src="@drawable/ic_lock_open_variant"/>

        <ImageView
            android:tint="@color/item_normal"
            android:layout_weight="1.0"
            android:background="?attr/selectableItemBackground"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:padding="6dp"
            android:id="@+id/deleteView"
            android:src="@drawable/ic_delete_all"/>

        <ImageView
            android:tint="@color/item_normal"
            android:layout_weight="1.0"
            android:background="?attr/selectableItemBackground"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:id="@+id/moveView"
            android:padding="5dp"
            android:src="@drawable/ic_move_item"/>

        <ImageView
            android:tint="@color/item_normal"
            android:layout_weight="1.0"
            android:background="?attr/selectableItemBackground"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:id="@+id/selectView"
            android:padding="5dp"
            android:src="@drawable/ic_select_all"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/view_album_fab_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plus"
        android:layout_margin="20dp" />
</RelativeLayout>

