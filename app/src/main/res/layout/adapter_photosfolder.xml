<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
    android:padding="10dp"
	android:orientation="vertical">
    
    <android.support.v7.widget.CardView 
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        app:cardBackgroundColor="@color/colorBackground"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	
        android:layout_gravity="center"
        app:cardCornerRadius="16dp">
        
		<RelativeLayout
            android:focusable="true"
            android:id="@+id/adapter_photosfolderParentView"
			android:layout_width="match_parent"
			android:background="?attr/selectableItemBackground"
			android:orientation="vertical"
			android:layout_height="150dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/iv_image"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/adapter_photosfolderLinearLayout"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#D9000000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_folder"
                    android:textStyle="bold"
                    android:textColor="#f0f0f0"
                    android:textSize="15dp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_folder2"
                    android:textColor="@color/item_normalLight"
                    android:textSize="13dp"/>
            </LinearLayout>
            
            <FrameLayout
                android:layout_above="@+id/adapter_photosfolderLinearLayout"
                android:layout_width="match_parent"
                android:gravity="center"
                
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:id="@+id/play_view"
                    android:visibility="gone"
                    android:scaleType="centerCrop"/>
            </FrameLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

