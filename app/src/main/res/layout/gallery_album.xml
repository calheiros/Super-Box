<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<android.support.design.widget.AppBarLayout
		android:id="@+id/tabanim_appbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

		<include
			layout="@layout/toolbar"/>

	</android.support.design.widget.AppBarLayout>

	<GridView
		android:layout_below="@id/tabanim_appbar"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/gv_folder"
		android:numColumns="auto_fit"
		android:padding="6dp"/>

	<ProgressBar
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_centerInParent="true"
		android:id="@+id/galleryalbumProgressBar"
		android:visibility="gone"/>
    
    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@+id/tabanim_appbar"
        android:orientation="vertical"
        android:id="@+id/gallery_album_empty_layout"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="@string/ascii_look_of_disapproval"
            android:textSize="18pt"
            android:textColor="@color/item_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:text="@string/galeria_vazia"
            android:textColor="@color/item_normal"
            android:id="@+id/emptyTextView"
            android:layout_marginTop="14dp"/>
        
    </LinearLayout>
    
	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/vazio"
		android:gravity="center"
		android:visibility="gone"
		android:id="@+id/vazio"
        android:textColor="@color/item_normal"
		android:layout_centerInParent="true"
		android:padding="10dp"
		android:textAppearance="?android:attr/textAppearanceMedium"/>

</RelativeLayout>

