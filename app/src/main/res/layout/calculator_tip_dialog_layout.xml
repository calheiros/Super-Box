<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_marginStart="16dp"
	android:layout_marginEnd="16dp"
	android:gravity="center"
	android:layout_height="wrap_content">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="14sp"
        android:gravity="center"
        android:textColor="?commonColorLight"
        android:text="@string/codigo_calculadora_mensagem_1"/>

	<LinearLayout
		android:orientation="horizontal"
		android:paddingVertical="8dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:gravity="center"
            android:layout_marginEnd="16dp"
			android:layout_height="wrap_content">

			<TextView
				android:textSize="12sp"
                android:layout_margin="2dp"
                android:text="@string/antes"
                android:textColor="?commonColorDark"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"/>

			<ImageView
                android:src="@mipmap/ic_launcher"
				android:layout_width="36dp"
				android:layout_height="36dp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp">

			<TextView
				android:textSize="12sp"
                android:layout_margin="2dp"
				android:text="@string/depois"
                android:textColor="?commonColorDark"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<ImageView
                android:src="@mipmap/ic_calculator"
				android:layout_width="36dp"
				android:layout_height="36dp"/>

		</LinearLayout>

	</LinearLayout>

	<TextView
        android:text="@string/codigo_calculadora_mensagem_2"
		android:textSize="14sp"
        android:gravity="center"
        android:textColor="?commonColorLight"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

</LinearLayout>

