<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:id="@+id/storage_permission_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center">

	<LinearLayout
		android:orientation="vertical"
		android:gravity="center"
		android:layout_marginTop="-160dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
            android:textColor="?attr/commonColor"
			android:text="Permission Request"
			android:layout_marginBottom="6dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:textColor="?attr/commonColorDark"
			android:text="Fully access to internal memory is required"
			android:layout_marginBottom="10dp"/>

		<ImageView
            android:tint="?commonColorDark"
			android:layout_width="120dp"
			android:layout_height="120dp"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorAccent"
			android:text="allow"
			android:layout_marginTop="10dp"/>

	</LinearLayout>

</LinearLayout>

